@{
    ViewData["Title"] = "Add Customer";
}

<h2>Add Customer</h2>

<form method="post">
    <label>Name:</label>
    <input type="text" name="name" required /><br/>
    <label>Email:</label>
    <input type="email" name="email" required /><br/>
    <label>Address:</label>
    <input type="text" name="address" required /><br/>
    <button type="submit">Add Customer</button>
</form>
