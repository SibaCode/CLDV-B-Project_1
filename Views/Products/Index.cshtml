@model IEnumerable<ABCRetailDemo.Models.Product>

<h1>Products</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Add Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>
                    @if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        <img src="@p.ImageUrl" width="100" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
