@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="page-title">Dashboard</h2>

<div class="dashboard-grid">
    <a href="@Url.Action("Index", "Customers")" class="dashboard-card">
        <h3>Total Customers</h3>
        <p>@ViewBag.TotalCustomers</p>
    </a>

    <a href="@Url.Action("Index", "Product")" class="dashboard-card">
        <h3>Total Products</h3>
        <p>@ViewBag.TotalProducts</p>
    </a>

    <a href="@Url.Action("Index", "Order")" class="dashboard-card">
        <h3>Total Orders</h3>
        <p>@ViewBag.TotalOrders</p>
    </a>

    <a href="@Url.Action("Index", "Logs")" class="dashboard-card">
        <h3>Total Logs</h3>
        <p>@ViewBag.TotalLogs</p>
    </a>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #fafafa;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .dashboard-card {
        background-color: #fff;
        color: #333;
        border-radius: 16px;
        padding: 30px 20px;
        text-align: center;
        text-decoration: none;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
    }

    .dashboard-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }

    .dashboard-card h3 {
        margin-bottom: 12px;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .dashboard-card p {
        font-size: 2.2rem;
        font-weight: 600;
        margin: 0;
        color: #007bff;
    }

    @@media (max-width: 600px) {
        .dashboard-card p {
            font-size: 1.8rem;
        }
    }
</style>
