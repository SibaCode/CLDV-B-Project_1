@model List<ABCRetailDemo.Models.ProductEntity>

<div class="container mt-5">
    <h2 class="mb-4">Product List</h2>

    <a asp-action="Create" class="btn btn-warning text-white mb-3">Add New Product</a>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Price.ToString("R")</td>
                    <td>@product.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" width="100" class="img-thumbnail" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                    @* <td>
                        <a asp-action="Edit" asp-route-rowKey="@product.RowKey" class="btn btn-sm btn-warning text-white me-1">Edit</a>
                        <a asp-action="Delete" asp-route-rowKey="@product.RowKey" class="btn btn-sm btn-danger">Delete</a>
                    </td> *@

                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }
    table {
        background-color: #ffffff;
    }
</style>
