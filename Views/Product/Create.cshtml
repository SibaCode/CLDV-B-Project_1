@model ABCRetailDemo.Models.ProductEntity
@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0">Add New Product</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                </div>
                
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Enter price" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Product Image</label>
                    <input type="file" name="image" class="form-control" />
                </div>

                <button type="submit" class="btn btn-warning text-white">Add Product</button>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fa;
    }
    .card-header {
        background-color: #000000 !important;
    }
    .btn-warning {
        background-color: #ff6600 !important;
        border-color: #ff6600 !important;
    }
    .btn-warning:hover {
        background-color: #e65c00 !important;
        border-color: #e65c00 !important;
    }
</style>
