@{
    ViewData["Title"] = "Logs";
    var logs = ViewBag.Logs as List<string>;
}

<h2 class="page-title">Uploaded Logs</h2>

<!-- Upload Button -->
<a asp-action="Upload" asp-controller="Logs" class="btn-add mb-3">
    Upload New Log
</a>

@if (logs != null && logs.Count > 0)
{
    <div class="table-container">
        <table class="customers-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>File Name</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < logs.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@logs[i]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        No logs uploaded yet.
    </div>
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #fafafa;
    }

    .page-title {
        margin-bottom: 20px;
        font-weight: 600;
        font-size: 2rem;
        color: #333;
    }

    .btn-add {
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s ease;
        margin-bottom: 15px;
    }

    .btn-add:hover {
        background-color: #0069d9;
    }

    .table-container {
        overflow-x: auto;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        background-color: #fff;
    }

    .customers-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 400px;
    }

    .customers-table thead {
        background-color: #333;
        color: #fff;
        text-align: left;
    }

    .customers-table th, 
    .customers-table td {
        padding: 12px 15px;
    }

    .customers-table tbody tr {
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s ease;
    }

    .customers-table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .alert-info {
        padding: 10px 15px;
        border-radius: 8px;
    }

</style>
