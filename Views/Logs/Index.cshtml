@{
    ViewData["Title"] = "Logs";
    var logs = ViewBag.Logs as List<string>;
}

<h2 class="page-title">Uploaded Logs</h2>

<!-- Upload Button -->
<a asp-action="Upload" asp-controller="Logs" class="btn btn-primary mb-3">
    Upload New Log
</a>

@if (logs != null && logs.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>File Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < logs.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@logs[i]</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        No logs uploaded yet.
    </div>
}

<style>
    .page-title {
        margin-bottom: 20px;
        font-weight: 600;
        color: #333;
    }
</style>
