@{
    ViewData["Title"] = "Upload Log";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-dark text-white">
            <h2>Upload Log</h2>
        </div>
        <div class="card-body">
            <form asp-action="Upload" method="post">
                <div class="form-group mb-3">
                    <label>File Name</label>
                    <input type="text" name="fileName" class="form-control" placeholder="Enter file name" required />
                </div>

                <div class="form-group mb-3">
                    <label>Log Content</label>
                    <textarea name="logContent" class="form-control" rows="5" placeholder="Enter log content" required></textarea>
                </div>

                <button type="submit" class="btn-create">Upload</button>
            </form>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #fafafa;
    }

    .card-header {
        background-color: #000000 !important;
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px 12px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 6px rgba(0,123,255,0.3);
        outline: none;
    }

    .btn-create {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }

    .btn-create:hover {
        background-color: #0069d9;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .alert-success {
        padding: 10px 15px;
        border-radius: 8px;
    }
</style>
