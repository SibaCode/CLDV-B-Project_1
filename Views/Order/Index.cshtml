@model List<ABCRetailDemo.Models.OrderEntity>
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Create Order</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CustomerName</td>
                <td>@order.ProductName</td>
                <td>@order.Quantity</td>
                <td>@order.Price</td>
                <td>@order.OrderDate?.ToLocalTime().ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
