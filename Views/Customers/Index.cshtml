@model List<CustomerEntity>
@{
    ViewData["Title"] = "Customers";
}

<h2 class="page-title">Customers</h2>

<a href="/Customers/Create" class="btn-add">Add Customer</a>

<div class="table-container">
    <table class="customers-table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                @* <th>Actions</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@customer.FullName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    @* <td>
                        <a asp-action="Edit" asp-route-id="@customer.RowKey" class="btn-edit">Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.RowKey" class="btn-delete">Delete</a>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #fafafa;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    .page-title {
        margin-bottom: 20px;
        font-weight: 600;
        font-size: 2rem;
    }

    .btn-add {
        display: inline-block;
        background-color: #ff7a00;
        color: #fff;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s ease;
        margin-bottom: 15px;
    }

    .btn-add:hover {
        background-color: #e66b00;
    }

    .table-container {
        overflow-x: auto;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        background-color: #fff;
    }

    .customers-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 400px;
    }

    .customers-table thead {
        background-color: #333;
        color: #fff;
        text-align: left;
    }

    .customers-table th, 
    .customers-table td {
        padding: 12px 15px;
    }

    .customers-table tbody tr {
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s ease;
    }

    .customers-table tbody tr:hover {
        background-color: #f5f5f5;
    }

</style>
